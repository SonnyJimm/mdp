<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- First gradient for the top part -->
    <item android:top="0dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#f7f6f7"
            android:centerColor="#d6d7d6"
            android:endColor="#f7f6f7"

            android:type="linear"
            android:angle="0"
            />

        </shape>
    </item>
    <!-- Second gradient for the bottom part -->
    <item android:top="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#f7f6f7"
            android:centerColor="#f1f0f1"
            android:endColor="#f7f6f7"

            />
        </shape>
    </item>
</layer-list>
